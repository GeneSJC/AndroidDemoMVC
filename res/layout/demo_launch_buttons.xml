<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="#e0f0ff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     android:id="@+id/layout_top"
     >

     <Button
     android:id="@+id/toast1_button"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:text="Simple Toast"
     />

     <Button
     android:id="@+id/webrequest_button"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:text="Web Request Example"
     />

     <Button
     android:id="@+id/drawerdemo_button"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:text="Drawer Example"
     />

<!--
 -->


     <Button
     android:id="@+id/splashactivity_button"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:text="SplashActivity"
     />

     <Button
     android:id="@+id/inventorylistactivity_button"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:text="InventoryListActivity"
     />

     <Button
     android:id="@+id/inventoryeditoractivity_button"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:text="InventoryEditorActivity"
     />


</LinearLayout>